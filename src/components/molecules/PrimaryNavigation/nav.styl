@import "../../../stylus/variables"

activeNavLink()
  content ''
  width 100%
  height 3px
  display block
  border-radius 2px
  margin-top 4px

.main-navigation
  padding-right 0
  padding-left 0

  .navbar-toggler
    width 20px
    position relative
    height 20px
    border 0

    &:focus
      outline none

    &:after
      activeNavLink()
      background linear-gradient(90deg, #7D8BE0 -183.82%, #A154F2 2.6%)
      position absolute
      top 50%
      margin-top -1.5px
      left 0

    span
      &:before
      &:after
        activeNavLink()
        background linear-gradient(90deg, #7D8BE0 -183.82%, #A154F2 2.6%)
        position absolute
        bottom 0
        left 0
        margin-top 0
        

      &:before
        bottom auto
        top 0

    &.hide-nav
      span:after
      span:before
        transform rotate(-45deg)
        top 50%
        margin-top -1.5px
        transition transform .2s ease-in-out

      span:before
        transform rotate(45deg)

      &:after
        display none

  .dropdown
    cursor pointer

    .dropdown-toggle
      pointer-events none

      &:after
        display none
        border 0
        margin 0

    .dropdown-menu
      @media (max-width $grid-sm)
        display block

      left 7px
      top 76%
      background-color #212223
      padding 0
      border-radius 0

      .dropdown-item
        padding 8px 10px

        &:hover
        &:active
          background transparent

        &.active
          @media (min-width $grid-md)
            background #7991DE
            color #fff
            font-weight 300

          font-weight 500
          background transparent

    &:hover
      .dropdown-menu
        display block

  .navbar-nav
    .nav-link
    .dropdown-toggle
      position relative

      &:after
        activeNavLink()
        position absolute
        width calc(100% - 15px)
        bottom 2px

      &.active
        font-weight 400
        position relative

        &:after
          background linear-gradient(90deg, #7D8BE0 -183.82%, #A154F2 2.6%);

    .nav-link
    .dropdown-toggle
    .dropdown-item
      font-family "Montserrat"
      font-size 12px
      text-transform uppercase
      font-weight 300
      color #8085E2

      &:hover
      &:active
      &:focus
      &:visited
        color #8085E2
        text-decoration none